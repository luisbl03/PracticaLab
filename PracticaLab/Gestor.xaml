<Window x:Class="PracticaLab.Gestor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaLab"
        mc:Ignorable="d"
        Title="Gestión Fisioterapia" Height="600" Width="1050">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="64*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="527*"/>
                <ColumnDefinition Width="523*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="38*"/>
                <ColumnDefinition Width="137*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="43*"/>
                    <RowDefinition Height="213*"/>
                </Grid.RowDefinitions>
                <Button Content="Añadir paciente"
                        HorizontalAlignment="Left"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        Height="40"
                        Width="95"/>
                <Button Content="Eliminar paciente"
                        HorizontalAlignment="Right"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center"
                        Height="40"
                        Width="95"/>
                <Border BorderBrush="Black" BorderThickness="1" Margin="10,10,10,28" Grid.Row="1">
                    <ListBox x:Name="Lista_de_pacientes"/>
                </Border>
            </Grid>
            <Grid Grid.Column="1"/>
        </Grid>


    </Grid>
</Window>
